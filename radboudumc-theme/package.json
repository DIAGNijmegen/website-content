{
  "name": "radboudumc-theme",
  "version": "1.0.0",
  "description": "Theme for pathology website",
  "main": "index.js",
  "scripts": {
    "minify": "node-sass --output-style compressed ./sass/ -o ./build/",
    "postcss": "postcss  --replace ./build/*.css --no-map --map --use autoprefixer",
    "watch": "node-sass-chokidar ./sass -o ./build --watch --source-map-embed ",
    "deploy": "npm run minify && npm run postcss && cp -r ./build/. ./../radboudumc-template/static/css/ && node increase-version.js",
    "deploy-watch": "node-sass-chokidar --watch --source-map-embed ./sass/diag-theme.scss ./../website-diag/output/theme/css/diag-theme.css &&  node-sass-chokidar --watch --source-map-embed ./sass/cara-theme.scss ./../website-cara-lab/output/theme/css/cara-theme.css"
  },
  "author": "Wouter Bulten",
  "license": "Copyright",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "bootstrap": "^4.5.0",
    "browser-sync": "^2.26.14",
    "node-sass": "^7.0.0",
    "node-sass-chokidar": "^1.5.0",
    "postcss-cli": "^8.3.1"
  }
}
