{
  "name": "radboudumc-theme",
  "version": "1.0.0",
  "description": "Theme for pathology website",
  "main": "index.js",
  "scripts": {
    "minify": "node-sass --output-style compressed ./sass/theme.scss ./build/theme.min.css",
    "postcss": "postcss ./build/theme.min.css --no-map --map --use autoprefixer -o ./build/theme.min.css",
    "watch": "node-sass-chokidar ./sass -o ./build --watch --source-map-embed ",
    "deploy": "npm run minify && npm run postcss && cp -r ./build/. ./../radboudumc-template/static/css/",
    "deploy-watch": "node-sass-chokidar  --watch --source-map-embed ./sass/theme.scss ./../themes/radboudumc-theme/static/css/theme.min.css"
  },
  "author": "Wouter Bulten",
  "license": "Copyright",
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "bootstrap": "^4.1.3",
    "browser-sync": "^2.26.3",
    "node-sass": "^4.9.4",
    "node-sass-chokidar": "^1.3.4",
    "postcss-cli": "^6.0.1"
  }
}
